<div class="overlay" id="promoOverlay">
    <div class="overlay-content">
        <h1>Special Promotion!</h1>
        <p>Get 20% off your first purchase. Use code: WELCOME20</p>
        <button onclick="closeOverlay()">Close</button>
    </div>
</div>

<button onclick="showOverlay()" class="showOverlay">Show Promo</button>

<style>
  /* Overlay Styling */
.overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7); /* Dark background */
    color: white;
    display: none; /* Hidden by default */
    justify-content: center;
    align-items: center;
    z-index: 1000; /* Ensure it's on top */
}

.overlay-content {
    text-align: center;
    padding: 20px;
    background-color: white;
    color: black;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

.overlay-content button {
    background-color: #f39c12;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}
.showOverlay{
    position: fixed;
    left: 10px;
    bottom: 20px;
    padding: 10px 15px;
    color: white;
    font-size: 16px;
    border: none;
    z-index: 9999;
  background-color: #f39c12;
}
</style>

<script>
  function showOverlay() {
    document.getElementById("promoOverlay").style.display = "flex"; // Show the overlay
}

function closeOverlay() {
    document.getElementById("promoOverlay").style.display = "none"; // Hide the overlay
}

</script>