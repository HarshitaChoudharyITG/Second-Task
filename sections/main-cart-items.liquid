{% javascript %}
  // Shipping Calculate
   document.getElementById('shipping-calculator-form').addEventListener('submit', function(e) {
  e.preventDefault();

  var zipCode = document.getElementById('shipping-zip').value;
  var country = document.getElementById('shipping-country').value;
  var province = document.getElementById('shipping-province').value;

  var url = '/cart/shipping_rates.json?shipping_address[zip]=' + zipCode + 
            '&shipping_address[country]=' + country + 
            '&shipping_address[province]=' + province;

  fetch(url)
    .then(response => response.json())
    .then(data => {
      if (data.shipping_rates.length > 0) {
        var shippingRatesHtml = '<h4>Available Shipping Rates:</h4><ul>';
        data.shipping_rates.forEach(rate => {
          shippingRatesHtml += '<li>' + rate.name + ': â‚¹' + rate.price + '</li>';
        });
        shippingRatesHtml += '</ul>';
        document.getElementById('shipping-rates').innerHTML = shippingRatesHtml;
      } else {
        document.getElementById('shipping-rates').innerHTML = '<p>No shipping rates available for this address.</p>';
      }
    })
    .catch(error => {
      console.error('Error fetching shipping rates:', error);
      document.getElementById('shipping-rates').innerHTML = '<p>There was an error fetching shipping rates. Please try again.</p>';
    });
});

  // Discount
  document.getElementById('apply-discount-btn').addEventListener('click', function() {
    var discountCode = document.getElementById('discount-code-input').value.trim();
    
    if (discountCode === '') {
        return;
    }
    
    var formData = new FormData();
    formData.append('discount', discountCode);

    fetch('/discount/' + discountCode, {
        method: 'GET',
        headers: {
            'Accept': 'application/json',
        },
    })
    .then(function(response) {
      if(response.ok){
         console.log('Discount code applied successfully!');
         location.reload();
        refreshCarts();
      }
        return response.json();
    })
    .catch(function(error) {
        console.error('Error applying discount code:', error);
    });
});

function refreshCarts() {
    fetch('/cart.js')
    .then(function(response) {
        return response.json();
    })
    .then(function(cart) {
        console.log("cart", cart);
    })
    .catch(function(error) {
        console.error('Error:', error);
    })
}
{% endjavascript %}
{% schema %}
{
  "name": "t:sections.main-cart-items.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
